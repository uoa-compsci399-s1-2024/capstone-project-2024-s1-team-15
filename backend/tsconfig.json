{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true
    }
}

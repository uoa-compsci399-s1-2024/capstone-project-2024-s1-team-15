{
  "name": "aapc-backend",
  "version": "0.1.1",
  "private": true,
  "description": "The backend of the AAPC website.",
  "scripts": {
    "dev": "nodemon -x tsx ./src/index.ts",
    "build": "tsc --build",
    "start": "node ./dist/index.js",
    "deploy:development": "npm run build && vercel build && vercel deploy --prebuilt",
    "deploy:production": "npm run build && vercel build --prod && vercel --prod deploy --prebuilt",
    "prettier": "prettier ./**/*.{js,ts} --check",
    "prettier:fix": "prettier ./**/*.{js,ts} --write"
  },
  "dependencies": {
    "@aapc/types": "^0.2.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}